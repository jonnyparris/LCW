<div class="small-centered columns">
  <h1>Welcome to Loudoun County Weddings</h1>
  <!-- <h3 class="subheader">Your guide to all local wedding resources in the gorgeous Loudoun County</h3> -->
</div>

<div class="transparent">
  <aside class="large-2 columns nopadding-right">
    <ul class="side-nav">
      <% if user_signed_in? %>
        <li class="large-text-right small-text-center medium-text-center"><%= link_to 'Add Venue', new_venue_path, class: "button left-side-panel" %></li>
        <li class="large-text-right small-text-center medium-text-center"><%= link_to 'Add Vendor', new_vendor_path, class: "button left-side-panel" %></li>
      <% else %>
        <li class="large-text-right small-text-center medium-text-center"><%= link_to("Venues", "#", class: "button left-side-panel") %></li>
        <li class="text-right"><%= link_to("Vendors", "#", class: "button left-side-panel") %></li>
      <% end %>
      <li class="large-text-right small-text-center medium-text-center">
        <div class="switch large">
          <input id="mapSwitch" type="checkbox">
            <label for="mapSwitch">
              <span class="switch-on">MAP</span>
              <span class="switch-off">LIST</span>
          </label>
        </div>
      </li>
    </ul>
    <div class="common-filters left-side-panel">
      <ul class="no-bullet">
          <li>
            Max: $
            <span id="priceOutput"></span>
            <div class="range-slider radius" data-slider data-options="start: 1; end: 1000; display_selector: #priceOutput;">
              <span class="range-slider-handle" role="slider" tabindex="0"></span>
              <span class="range-slider-active-segment"></span>
              <input type="hidden">
            </div>
          </li>
          <li>
            <span id="capacityOutput"></span>
            People
            <div class="range-slider radius" data-slider data-options="start: 10; end: 500; display_selector: #capacityOutput;">
              <span class="range-slider-handle" role="slider" tabindex="0"></span>
              <span class="range-slider-active-segment"></span>
              <input type="hidden">
            </div>
          </li>
          <li class="text-center">
            Disabled access?
            <div class="switch tiny">
              <input id="disabledSwitch" type="checkbox">
              <label for="disabledSwitch">
                <span class="tiny-switch-on">Yes</span>
                <span class="tiny-switch-off">No</span>
              </label>
            </div>
          </li>
          <li class="text-center">
            Child friendly?
            <div class="switch tiny">
              <input id="childSwitch" type="checkbox">
              <label for="childSwitch">
                <span class="tiny-switch-on">Yes</span>
                <span class="tiny-switch-off">No</span>
              </label>
            </div>
          </li>
      </ul>
      <div class="text-center">
        <button class="button radius">
          Update Filter
        </button>
      </div>
    </div>
  </aside>

  <article class="left-border large-10 columns scrollable radius">
    <%= render @venues unless @venues.nil? %>
    <%= render @vendors unless @vendors.nil? %>
  </article>

</div>
