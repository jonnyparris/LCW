<div class="row">
  <h1>All Vendors</h1>
  <%= link_to 'Add Vendor', new_vendor_path, class: "button" %>

  <table>
    <thead>
      <tr>
        <th colspan="1">Vendor Name</th>
        <th colspan="3">Options</th>
      </tr>
    </thead>

    <tbody>
      <% @vendors.each do |vendor| %>
        <tr>
          <td>
            <h3><%= vendor.name %></h3>
            <%= image_tag(vendor.photos.first.url) if vendor.photos? %>
          </td>
          <td><%= link_to 'Show', vendor %></td>
          <td><%= link_to 'Edit', edit_vendor_path(vendor) %></td>
          <td><%= link_to 'Destroy', vendor, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
