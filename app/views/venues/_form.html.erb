<%= simple_form_for @venue, html: { multipart: true } do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :contact_details %>
    <%= f.input :website %>
    <%= f.input :pricing %>
    <%= f.input :description %>
    <%= f.input :size_details %>
    <%= f.input :directions %>
    <%= f.input :photos, as: :file, input_html: { multiple: true } %>
    <%= f.association :preferred_vendors, as: :check_boxes %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
